generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username       String @id
  hashedPassword String
}

model Family {
  id           Int      @id @default(autoincrement())
  familyName   String
  rsvpCode     String
  rsvpQuestion String
  rsvpAnswer   String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  guests Guest[]
}

model Guest {
  id               Int             @id @default(autoincrement())
  firstName        String
  lastName         String
  child            Boolean         @default(false)
  familyId         Int
  invitedDay       Boolean         @default(false)
  invitedEvening   Boolean         @default(false)
  attendingDay     Boolean         @default(false)
  attendingEvening Boolean         @default(false)
  allergies        String          @default("")
  foodPreference   FoodPreference?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  family Family @relation(fields: [familyId], references: [id])
}

enum FoodPreference {
  MEAT
  VEGETARIAN
  VEGAN
}
