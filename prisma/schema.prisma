generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id         String   @id
  name       String
  plusOne    String?
  email      String   @unique
  question   String
  answer     String
  rsvp       Boolean
  createdAt  DateTime @default(now())
  updatedAt  DateTime
}
